{
  "name": "personal-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "cross-env NODE_OPTIONS=\"--max_old_space_size=3072\" next build --no-lint",
    "build:minimal": "cross-env NEXT_MINIMAL_BUILD=true NODE_OPTIONS=\"--max_old_space_size=4096 --v8-pool-size=0\" next build --no-lint",
    "build:prod": "cross-env NODE_OPTIONS=\"--max_old_space_size=4096\" next build --no-lint",
    "build:simple": "cross-env NODE_OPTIONS=\"--max_old_space_size=4096\" next build --no-lint",
    "build:ultra-simple": "cross-env NEXT_TELEMETRY_DISABLED=1 NODE_OPTIONS=\"--max_old_space_size=4096 --v8-pool-size=0 --no-warnings\" next build --no-lint",
    "build:optimized": "./scripts/build-optimized.sh",
    "build:optimized:minimal": "./scripts/build-optimized.sh true",
    "build:optimized:simple": "cp next.config.simple.js next.config.js && NODE_OPTIONS=\"--max_old_space_size=4096 --v8-pool-size=0\" next build --no-lint",
    "build:static": "./scripts/build-minimal-static.sh",
    "build:incremental": "./scripts/build-incremental.sh",
    "build:deployable": "./scripts/build-deployable.sh",
    "build:progressive": "./scripts/progressive-build.sh",
    "analyze:pages": "./scripts/analyze-pages.sh",
    "clean": "rm -rf .next && rm -rf out",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:db": "node scripts/test-database-connection.js",
    "test:db:crud": "node scripts/test-database-crud.js",
    "extract-blog-content": "tsx scripts/extract-blog-content.ts",
    "extract-project-content": "tsx scripts/extract-project-content.ts",
    "extract-risk-content": "tsx scripts/extract-risk-content.ts",
    "extract-all-content": "npm run extract-blog-content && npm run extract-project-content && npm run extract-risk-content",
    "seed:projects": "tsx scripts/seed-projects.ts",
    "postinstall": "npx prisma generate",
    "build:vercel": "npx prisma generate && npx prisma migrate deploy && next build",
    "build:production": "npx prisma generate && next build",
    "deploy:db": "npx prisma migrate deploy",
    "deploy:seed": "npm run deploy:db && npm run seed:projects"
  },
